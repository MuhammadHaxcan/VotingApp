@model VotingApp.Models.Candidate

@{
    ViewData["Title"] = "Edit Candidate";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2>Edit Candidate</h2>
    </div>
    <div class="card-body">
        <form method="post" asp-action="EditCandidate">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" value="@Model.User.Name" required>
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" value="@Model.User.Email" required>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="nic">NIC</label>
                <input type="text" name="nic" class="form-control" value="@Model.User.NIC" required>
                <span asp-validation-for="User.NIC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="electionId">Election</label>
                <select name="electionId" class="form-control">
                    @foreach (var election in ViewBag.Elections)
                    {
                        <option value="@election.Id" selected="@(Model.ElectionId == election.Id ? "selected" : null)">
                            @election.Name
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="password">Password (Leave empty to keep unchanged)</label>
                <input type="text" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Update Candidate</button>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}

<a asp-action="Users" class="btn btn-secondary mt-3">Back to Candidates List</a>